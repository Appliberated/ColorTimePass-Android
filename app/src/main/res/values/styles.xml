<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- *********************************************** -->
    <!-- Main Activity                                   -->
    <!-- *********************************************** -->

    <!-- Main Activity theme -->
    <style name="MainTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionOverflowButtonStyle">@style/MainTheme.ActionButtonOverflow</item>
        <item name="android:actionBarStyle">@style/MainTheme.ActionBarStyle</item>
    </style>

    <!-- Main Activity Action Bar style -->
    <style name="MainTheme.ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_main_action_bar</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <!-- Material-like Action Bar Overflow icon style -->
    <style name="MainTheme.ActionButtonOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

    <!-- *********************************************** -->
    <!-- Settings Activity                               -->
    <!-- *********************************************** -->

    <!-- Settings theme -->
    <style name="SettingsTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/up_indicator</item>
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBarStyle</item>
    </style>

    <!-- Settings Action Bar style -->
    <style name="SettingsTheme.ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_settings_action_bar</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <!-- *********************************************** -->
    <!-- Text Styles                                     -->
    <!-- *********************************************** -->

    <style name="ThemeText" parent="@android:style/TextAppearance">
    </style>

    <style name="ParentText" parent="ThemeText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_parent_text</item>
        <item name="android:layout_marginBottom">@dimen/info_text_margin_bottom</item>
        <item name="android:elegantTextHeight" tools:ignore="NewApi">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateText" parent="ParentText">
        <item name="android:textSize">@dimen/info2_text_size</item>
    </style>

    <style name="TimeText" parent="ParentText">
        <item name="android:textSize">@dimen/info1_text_size</item>
    </style>

    <style name="UnixTimeText" parent="ParentText">
        <item name="android:textSize">@dimen/info1_text_size</item>
    </style>

    <style name="ColorText" parent="ParentText">
        <item name="android:textSize">@dimen/info2_text_size</item>
    </style>

    <style name="DetailsText" parent="ParentText">
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">@dimen/details_text_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/details_text_left_padding</item>
        <item name="android:paddingRight">@dimen/details_text_right_padding</item>
    </style>

</resources>
